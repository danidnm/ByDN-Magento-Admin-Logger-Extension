<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- LOG Preference to use our logger (with IP, Line number, etc.) -->
    <preference for="Bydn\Logger\Model\LoggerInterface"
                type="Bydn\Logger\Model\Logger"/>

    <!-- Send exceptions by email or telegram -->
    <preference for="Magento\Framework\Logger\Handler\Exception"
                type="Bydn\Logger\Preference\Magento\Framework\Logger\Handler\Exception"/>

</config>

